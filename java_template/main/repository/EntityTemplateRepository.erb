package <%= package %>.repository;

import java.util.List;
import java.util.Optional;
import <%= package %>.bean.<%= @repository_name %>;

public interface <%= @repository_name %>Repository {
    int count();

    int save(<%= @repository_name %> entity);

    int update(<%= @repository_name %> entity);

    int deleteById(<% @pk.each_with_index do |pk,index| %><%= pk[:type] %> <%= pk[:name] %><% if index != @pk.size - 1 %>, <% end %><% end %>);

    List<<%= @repository_name %>> findAll(<% @pk.each_with_index do |pk,index| %><%if index != @pk.size - 1 %>Long <%= pk[:name] %><% end %><% if index < @pk.size - 2 %>, <% end %><% end %>);

    Optional<<%= @repository_name %>> findById(<% @pk.each_with_index do |pk,index| %><%= pk[:type] %> <%= pk[:name] %><% if index < @pk.size - 1 %>, <% end %><% end %>);   
}
