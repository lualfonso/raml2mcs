package <%= package %>;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.boot.CommandLineRunner;

@SpringBootApplication
public class <%= @project.camelize %>Application implements CommandLineRunner {
    
    private static final Logger log = LoggerFactory.getLogger(<%= @project.camelize %>Application.class);

    @Autowired
    JdbcTemplate jdbcTemplate;

	public static void main(String[] args) {
		SpringApplication.run(<%= @project.camelize %>Application.class, args);
	}

    @Override
    public void run(String... args) {
        log.info("StartApplication...");
        runJDBC();
    }
	void runJDBC() {
	log.info("Creating tables for testing...");
        <% @script_db.each do |table, script| %> 
        jdbcTemplate.execute("DROP TABLE IF EXISTS <%= table.underscore %> ");
        jdbcTemplate.execute("CREATE TABLE <%= table.underscore %>(" +
        "<%=script[:identity]%> int NOT NULL AUTO_INCREMENT ," +<%script[:struc].each do |key, type| %><% if type[:name].underscore!=script[:identity] %>
        "<%=type[:name].underscore%> <% if type[:type]=="Long"%> int <% end %><% if type[:type]=="String"%> VARCHAR(255)<% end %><% if type[:type]=="Date"%> date<% end %>, " + <% end %> <% end %>
        "PRIMARY KEY (`<%=script[:identity]%>`) )");
        <% end %>
	}
}
